{
  "name": "@storagehub/test",
  "version": "0.1.0",
  "description": "Test package for storagehub",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "docker:build": "docker build -t storage-hub:local -f ../docker/storage-hub-node.Dockerfile ../.",
    "docker:run:node": "docker compose -f ../docker/local-node-compose.yml up -d",
    "typegen": "papi generate --config papi.json",
    "zombie:run:latest": "SH_IMAGE=docker.io/moonsonglabs/storage-hub:latest bun zombienet spawn configs/simple.toml",
    "zombie:run:local": "DOCKER_BUILDKIT=0  SH_IMAGE=storage-hub:local bun zombienet spawn configs/simple.toml",
    "zombie:run:native": "bun run scripts/downloadPolkadot.ts 1.5.0  && bun zombienet spawn configs/simpleNative.toml",
    "zombie:test:native": "bun run scripts/downloadPolkadot.ts 1.5.0  && bun zombienet test --provider native configs/simpleNative.zndsl",
    "zombie:test:local": "SH_IMAGE=storage-hub:local bun zombienet test configs/simple.zndsl",
    "zombie:test:latest": "SH_IMAGE=docker.io/moonsonglabs/storage-hub:latest bun zombienet test configs/simple.zndsl",
    "test": "bun test"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@polkadot-api/cli": "0.0.1-0027dd301d1d5a078e9c770a18e27aed76a66f50.1.0",
    "@polkadot-api/client": "0.0.1-0027dd301d1d5a078e9c770a18e27aed76a66f50.1.0",
    "@polkadot-api/json-rpc-provider": "0.0.1-6b090acd3321b98b6306434088c5eba4a2e29edd.1.0",
    "@polkadot-api/node-polkadot-provider": "0.0.1-0027dd301d1d5a078e9c770a18e27aed76a66f50.1.0",
    "@polkadot-api/sm-provider": "0.0.1-28172e65e6c4fb53198b9932ff624f8eef05fe68.1.0",
    "@polkadot-api/ws-provider": "0.0.1-0027dd301d1d5a078e9c770a18e27aed76a66f50.1.0",
    "@types/bun": "1.0.12",
    "@zombienet/cli": "1.3.99",
    "@zombienet/orchestrator": "0.0.81",
    "smoldot": "2.0.23",
    "testcontainers": "10.7.2",
    "typescript": "5.4.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.6.1"
  }
}
