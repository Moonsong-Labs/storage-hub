{
    "name": "storagehub-e2e-dappwright",
    "version": "1.0.0",
    "description": "StorageHub SDK E2E tests using dAppwright for MetaMask automation",
    "type": "module",
    "scripts": {
        "test": "playwright test",
        "test:metamask": "HEADLESS=false playwright test --project metamask",
        "test:msp": "playwright test --project msp",
        "test:ui": "playwright test --ui",
        "test:debug": "HEADLESS=false playwright test --debug --project metamask",
        "install-deps": "pnpm install --ignore-workspace && pnpm exec playwright install chromium"
    },
    "devDependencies": {
        "@playwright/test": "^1.54.2",
        "@tenkeylabs/dappwright": "^2.11.2",
        "playwright": "^1.54.2",
        "@storagehub-sdk/core": "workspace:*",
        "@storagehub-sdk/msp-client": "workspace:*"
    },
    "engines": {
        "node": ">=22"
    }
}