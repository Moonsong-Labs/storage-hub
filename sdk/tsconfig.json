{
    "compilerOptions": {
        "strict": true,
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "./dist",
        "rootDir": ".",
        "declaration": true,
        "declarationDir": "./dist",
        "exactOptionalPropertyTypes": true,
        "noUncheckedIndexedAccess": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@storagehub/wasm": [
                "wasm/pkg"
            ]
        }
    },
    "include": [
        "ts/**/*",
        "wasm/pkg/**/*"
    ]
}