{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "declaration": true,
        "declarationDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@storagehub-sdk/core": [
                "../core/dist"
            ],
            "@storagehub/wasm": [
                "../core/wasm/pkg"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "dist"
    ]
}