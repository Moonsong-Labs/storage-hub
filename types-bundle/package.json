{
  "name": "@storagehub/types-bundle",
  "version": "0.2.0",
  "description": "Bundle definitions for Polkadot{.js} app & api",
  "private": false,
  "type": "module",
  "scripts": {
    "fmt": "biome format .",
    "fmt:fix": "biome format . --write",
    "tsc": "tsc --noEmit --pretty",
    "build": "tsc -b --verbose"
  },
  "keywords": [],
  "author": "",
  "module": "./dist/definitions.js",
  "types": "./dist/types/definitions.d.ts",
  "exports": {
    ".": {
