      "module": "./dist/definitions.js",
      "default": "./dist/definitions.js"
    }
  },
  "license": "ISC",
  "dependencies": {
    "@polkadot/api": "*",
    "@polkadot/api-base": "*",
    "@polkadot/rpc-core": "*",
    "@polkadot/typegen": "*",
    "@polkadot/types": "*",
    "@polkadot/types-codec": "*",
    "typescript": "*"
  }
}